@using Blazor_Traffic.Shared

<div class="row">
    <div class="col-md">
        <table class="table">
            <thead>
                <tr align="center">
                    <th colspan="4">
                        Трамваи:
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var railway in this.Railways)
                {
                    <tr class="d-flex">
                        <td class="col-3 col-sm-3" align="left">
                            <span class="oi oi-vertical-align-bottom" aria-hidden="true"></span> @railway.LineName
                        </td>
                        @foreach (var time in railway.Times)
                        {
                            <td class="col-3 col-sm-3" align="center">
                                @time.ToShortTimeString()
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
[Parameter]
private StopTimes[] Railways { get; set; }
}