@using Blazor_Traffic.Shared

<div class="row">
    <div class="col-md">
        <table class="table">
            <thead>
                <tr align="center">
                    <th colspan="4">
                        Трамваи:
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var railway in this.Railways)
                {
                <tr>
                    <td class="col-md-3 col-xs-3" align="left">
                        <span class="sm-label w-25 p-1 d-inline-flex railway">
                            <span class="oi oi-vertical-align-bottom p-1" aria-hidden="true"></span>
                            <span>@railway.LineName</span>
                        </span>
                    </td>
                    @foreach (var time in railway.Times)
                    {
                        <td class="col-md-3 col-xs-3 align-middle" align="center">
                            @time.ToShortTimeString()
                        </td>
                    }
                    @if (railway.Times.Length < 3)
                    {
                        var loops = 3 - railway.Times.Length;

                        for (int i = 0; i < loops; i++)
                        {
                            <td class="col-md-3 col-xs-3 align-middle" align="center"></td>
                        }
                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    [Parameter]
    private StopTimes[] Railways { get; set; }
}