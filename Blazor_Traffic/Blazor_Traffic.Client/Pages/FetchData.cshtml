@using Blazor_Traffic.Shared
@page "/fetchdata"
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (stations == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Route ID</th>
                <th>Code</th>
                <th>Point ID</th>
                <th>Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var station in stations)
            {
            <tr>
                <td>@station.Id</td>
                <td>@station.Route_id</td>
                <td>@station.Code</td>
                <td>@station.Point_id</td>
                <td>@station.Name</td>
                <td>@station.Latitude</td>
                <td>@station.Longitude</td>
            </tr>
            }
        </tbody>
    </table>
}

@functions {
    Station[] stations;

    protected override async Task OnInitAsync()
    {
        stations = await Http.GetJsonAsync<Station[]>("api/Traffic/All");
    }
}
